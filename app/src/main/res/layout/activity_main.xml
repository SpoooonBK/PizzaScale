<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.estebanrodriguez.apps.pizzascale.MainActivity"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="30sp"
        android:hint="@string/enter_weight"
        android:inputType="numberDecimal"
        android:layout_gravity="center"
        android:id="@+id/input"
        />

    <Button
        android:id="@+id/pizza_scale_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pizza_scale_me"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/text_view_num_of_slices"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_weight="1"
        />
    <TextView
        android:id="@+id/text_view_num_of_pizzas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/text_view_num_of_remaining"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_weight="1"/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/pizza_on_scale"/>


    <CheckBox
        android:id="@+id/unit_check_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Kg"
        android:layout_gravity="bottom"
        />



</LinearLayout>
